{
    "name":     "psr7-sessions/storageless",
    "description": "Storageless PSR-7 Session support",
    "license":  "MIT",
    "authors": [
        {
            "name":     "Marco Pivetta",
            "email":    "ocramius@gmail.com",
            "homepage": "http://ocramius.github.io/",
            "role":     "Developer"
        },
        {
            "name":  "Jefersson Nathan",
            "email": "malukenho@phpse.net",
            "role":  "Developer"
        },
        {
            "name":  "Luís Otávio Cobucci Oblonczyk",
            "email": "lcobucci@gmail.com",
            "role":  "Developer"
        }
    ],
    "require": {
        "php":                             "^7.4.7",
        "ext-json":                        "*",
        "dflydev/fig-cookies":             "^2.0.1",
        "lcobucci/jwt":                    "^3.3.2",
        "lcobucci/clock":                  "^2.0.0",
        "psr/http-message":                "^1.0.1",
        "psr/http-server-handler":         "^1.0.1",
        "psr/http-server-middleware":      "^1.0.1"
    },
    "require-dev": {
        "doctrine/coding-standard":           "^8.2.0",
        "infection/infection":                "^0.16.4",
        "laminas/laminas-diactoros":          "^2.3.1",
        "laminas/laminas-httphandlerrunner":  "^1.2.0",
        "phpunit/phpunit":                    "^9.2.6",
        "psalm/plugin-phpunit":               "^0.12.2",
        "roave/backward-compatibility-check": "^5.0",
        "squizlabs/php_codesniffer":          "^3.5.5",
        "vimeo/psalm":                        "^3.13.1"
    },
    "config": {
        "sort-packages": true
    },
    "replace": {
        "ocramius/psr7-session": "self.version"
    },
    "autoload": {
        "psr-4": {
            "PSR7Sessions\\Storageless\\": "src/Storageless"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "PSR7SessionsTest\\Storageless\\": "test/StoragelessTest"
        }
    }
}
